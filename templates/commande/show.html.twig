{% extends 'base.html.twig' %}

{% block title %}Commande
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Commande</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ commande.id }}</td>
				</tr>
				<tr>
					<th>StartAt</th>
					<td>{{ commande.startAt ? commande.startAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>EndAt</th>
					<td>{{ commande.endAt ? commande.endAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ commande.prix }}</td>
				</tr>
				<tr>
					<th>EnregistrerAt</th>
					<td>{{ commande.enregistrerAt ? commande.enregistrerAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex">
			<a href="{{ path('app_commande_edit', {'id': commande.id}) }}">
				<i class="fa-solid fa-pen-to-square fs-4 ms-3"></i>
			</a>
			{{ include('commande/_delete_form.html.twig') }}
		</div>
		<a href="{{ path('app_commande_index') }}">back to list</a>

	</div>
{% endblock %}
