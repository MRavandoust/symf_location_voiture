{% extends 'base.html.twig' %}

{% block title %}Vehicule
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Vehicule</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ vehicule.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ vehicule.titre }}</td>
				</tr>
				<tr>
					<th>Marque</th>
					<td>{{ vehicule.marque }}</td>
				</tr>
				<tr>
					<th>Modele</th>
					<td>{{ vehicule.modele }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ vehicule.description }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
						{% if vehicule.image %}
							<img src="{{asset('images/' ~ vehicule.image)}}" height="200" alt="">
						{% else %}
							<img src="{{ asset('images/imageDefault.jpg') }}" height="200" alt="">
						{% endif %}
					</td>
				</tr>
			</tbody>
		</td>
		<tr>
			<th>Prix</th>
			<td>{{ vehicule.prix }}</td>
		</tr>
		<tr>
			<th>EnregisterAt</th>
			<td>{{ vehicule.enregisterAt ? vehicule.enregisterAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
	</tbody>
</table>
<div class="d-flex">
<a href="{{ path('app_admin_vehicule_edit', {'id': vehicule.id}) }}"><i class="fa-solid fa-pen-to-square fs-4 ms-3"></i></a>
{{ include('admin_vehicule/_delete_form.html.twig') }}
</div>

<a  href="{{ path('app_admin_vehicule_index') }}">back to list</a>

</div>

{% endblock %}
