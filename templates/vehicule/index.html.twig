{% extends 'base.html.twig' %}

{% block title %}Nos Vehicules
{% endblock %}

{% block body %}


	<div class="container">
		<div class="row my-4">

			<div class="col-md-3">
				<h3>List de Voitures</h3>
				<ul class="list-group my-3">
					{% if voitures %}
						{% for voiture in voitures %}
							<li class="list-group-item">
								<a href="{{ path('fiche_voiture', {'id' : voiture.id}) }}">{{ voiture.titre }}</a>
							</li>
						{% endfor %}
					{% else %}
						<h4 class="text-center text-danger">Auccun résulat</h4>
					{% endif %}
				</ul>
			</div>


			<div class="col-md-9">

				<div class="" style="display: grid; grid-template-columns: repeat(3, 0fr); column-gap: 25px; row-gap: 25px;">
					{% if voitures %}
						{% for voiture in voitures %}
							<div class="card " style="width: 18rem; border-redius:none !important;">

								{% if voiture.image %}
									<img src="{{asset('images/'~ voiture.image)}}" class="card-img-top" alt="">
								{% else %}
									<img src="{{ asset('images/imageDefault.jpg') }}" class="card-img-top" alt="..." style=" border-redius:0 !important;">
								{% endif %}


								<div class="card-body text-center">
									<h5 class="card-title">{{ voiture.titre | capitalize }}</h5>
									<hr>
									<h6 class="card-title">{{ voiture.prix }}€</h6>
									<a href="{{ path('fiche_voiture', {'id' : voiture.id}) }}" class="btn btn-primary col-12">Voir le details</a>
								</div>
							</div>
						{% endfor %}
					{% else %}
						<h4 class="text-center text-danger">Auccun résulat</h4>
					{% endif %}
				</div>

			</div>


		{% endblock %}
