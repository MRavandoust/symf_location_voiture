{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">
		<h1>User</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>EnregisrerAt</th>
					<td>{{ user.enregisrerAt ? user.enregisrerAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex">
			<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">
				<i class="fa-solid fa-pen-to-square fs-4 ms-3"></i>
			</a>
			{{ include('admin_user/_delete_form.html.twig') }}
		</div>


		
		<a href="{{ path('app_admin_user_index') }}">back to list</a>
	</div>
{% endblock %}
